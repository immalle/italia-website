@model ItalieNieuw.Models.Picture

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (@Html.BeginForm("EditPicture", "Admin", FormMethod.Post))  {
    var fullpath = "../Images/ImageUploads/" + Model.FileName;
    
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Picture: @Model.FileName</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.FileName)

        <img src="@fullpath" class="uploadedpicture" />
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

