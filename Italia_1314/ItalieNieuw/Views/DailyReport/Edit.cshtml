@model ItalieNieuw.Models.DailyReport

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="~/Scripts/CKEditor/ckeditor.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>DailyReport</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Report)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Report)
            @Html.ValidationMessageFor(model => model.Report)
        </div>

        <script type="text/javascript">
            CKEDITOR.replace('Report', {
                "extraPlugins": "imagebrowser",
                "imageBrowser_listUrl": "/DailyReport/GetPicturesAsJson"
                });
        </script>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
